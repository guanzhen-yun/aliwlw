<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_body"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="421dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_radius_4">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:id="@+id/tv_dn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26dp"
                android:layout_centerVertical="true"
                android:text="DeviceName:"
                android:textColor="#585858"
                android:textSize="14sp" />

            <RelativeLayout
                android:id="@+id/rl_dn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="26dp"
                android:layout_toRightOf="@id/tv_dn"
                android:background="#10000000">

                <EditText
                    android:id="@+id/tv_devicename"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    tools:text="YjAhIDS6UFGhZsktLe"
                    android:hint="请输入或扫码"
                    android:textColor="#030303"
                    android:layout_toLeftOf="@+id/iv_scan"
                    android:layout_marginRight="10dp"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/iv_scan"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:scaleType="center"
                    android:src="@mipmap/icon_scan" />
            </RelativeLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_ok"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/bg_green_2dp"
            android:gravity="center"
            android:padding="15dp"
            android:text="取消" />

        <TextView
            android:id="@+id/tv_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bg_greenn_2dp"
            android:gravity="center"
            android:padding="15dp"
            android:text="确定"
            android:textColor="#ffffff" />

    </RelativeLayout>


</RelativeLayout>